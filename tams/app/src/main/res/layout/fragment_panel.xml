<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dynamiclogic.tams.activity.fragment.PanelFragment"
    android:background="@color/primary">

    <TextView
        android:id="@+id/upperView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="LIST VIEW"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:gravity="center" />

    <ListView
        android:id="@+id/list"
        android:layout_below="@id/upperView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/accent" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/refresh"
        android:layout_alignRight="@id/list"
        android:layout_alignBottom="@id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/ic_sync_white_24dp"
        fab:fab_colorNormal="@color/primary"
        fab:fab_title="Refresh"
        fab:fab_colorPressed="@color/white_pressed"/>


</RelativeLayout>
